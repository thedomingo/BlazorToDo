@inject IModalService ModalService

    <div>
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Potrditev brisanja</h4>
            
            <hr>
            <p class="mb-0">Ali želiš potrditi brisanje?</p>
        </div>


        <button @onclick="@Confirm" class="btn btn-danger">Potrdi</button>
        <button @onclick="@Cancel" class="btn btn-secondary">Prekliči</button>
    </div>

        
   

@code {

    void Confirm()
    {
        ModalService.Close(ModalResult.Ok<bool>(true));
    }

    void Cancel()
    {
        ModalService.Cancel();
    }
}
